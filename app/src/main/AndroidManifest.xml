<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.dictionary">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.android.dictionary.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.android.dictionary.NumbersActivity"
            android:label="@string/category_numbers"
            android:parentActivityName="com.example.android.dictionary.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.dictionary.MainActivity" />

        </activity>

        <activity
            android:name="com.example.android.dictionary.PhrasesActivity"
            android:label="@string/category_phrases"
            android:parentActivityName="com.example.android.dictionary.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.dictionary.MainActivity" />
        </activity>

        <activity
            android:name="com.example.android.dictionary.ColorsActivity"
            android:label="@string/category_colors"
            android:parentActivityName="com.example.android.dictionary.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.dictionary.MainActivity" />
        </activity>

        <activity
            android:name="com.example.android.dictionary.DirectionsActivity"
            android:label="@string/category_directions"
            android:parentActivityName="com.example.android.dictionary.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.dictionary.MainActivity" />

        </activity>
    </application>

</manifest>